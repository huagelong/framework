{
    "name": "trendi/framework",
    "description": "a fast php framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Wang",
            "email": "hpuwang@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4.30",
        "ext-swoole" : "1.8.*",
        "ext-mbstring": "*",
        "ext-posix":"*",
        "mtdowling/cron-expression": "~1.1",
        "swiftmailer/swiftmailer": "^5.4",
        "symfony/console": "3.1.*",
        "symfony/dependency-injection":"3.1.*",
        "predis/predis": "^1.1"
    },
    "replace":{

    },
    "bin": [
        "trendi"
    ],
    "require-dev": {
        "phpunit/phpunit": "~5.4"
    },
    "autoload": {
        "psr-4": {
            "Trendi\\": "src/trendi",
            "Trendi\\Test\\": "tests"
        }
    },
    "suggest": {
        "ext-msgpack": "data serialize tool",
        "ext-igbinary":"data serialize tool",
        "ext-hprose":"data serialize tool",
        "symfony/proxy-manager-bridge": "Generate service proxies to lazy load them"
    },
    "autoload-dev": {
        "psr-4": {
        }
    },
    "minimum-stability": "dev",
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.phpcomposer.com"
        }
    }
}
